package br.com.academia;

import java.time.LocalDate;


import br.com.academia.model.Pessoa;

public class App {

	public static void main(String[] args) {
		
		// PESSOA 1
		
		Pessoa gustavo =new Pessoa();
		gustavo.setNome("Ana");
//		ana.setSexo('F');
		gustavo.setPeso(70);
		gustavo.setAltura(1.73);
		gustavo.setDataNascimento(LocalDate.of(2004, 10, 21));
		System.out.println("Nome: "+gustavo.getNome());
		System.out.println("Idade: " + gustavo.getIdade());
		System.out.println("Imc: "+ gustavo.getImc());
		System.out.println("Imc: "+ gustavo.getStatusImc());
//		ana.setNivelDeAtividade(NivelDeAtividade.MODERADO);
		
		
		// PESSOA 2 
		
		Pessoa gustavo1 =new Pessoa();
		gustavo1.setNome("Gustavo");
//		ana.setSexo('M');
		gustavo1.setPeso(90);
		gustavo1.setAltura(1.90);
		gustavo1.setDataNascimento(LocalDate.of(2000, 3, 26));
		System.out.println("******************");
		System.out.println("Nome: "+gustavo1.getNome());
		System.out.println("Idade: " + gustavo1.getIdade());
		System.out.println("Imc: "+ gustavo1.getImc());
		System.out.println("Imc: "+ gustavo1.getStatusImc());
//		ana.setNivelDeAtividade(NivelDeAtividade.MODERADO);
		System.out.println("******************");
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
	
	
	
	
	
	
	
}
